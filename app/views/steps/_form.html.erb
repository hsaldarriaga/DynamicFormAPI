<%= form_for(@step) do |f| %>
  <% if @step.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@step.errors.count, "error") %> prohibited this step from being saved:</h2>

      <ul>
      <% @step.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :step_id, 'Procedure step number, for example step 1, 2, 3' %><br>
    <%= f.number_field :step_id %>
  </div>
  <div class="field">
    <%= f.label :procedure_id %><br>
    <%= f.collection_select(:procedure_id, Procedure.all, :procedure_id, :name) %>
  </div>
  <div class="field">
    <%= f.label :content, 'See below*' %><br>
    <%= f.text_field :content %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
  <p>*The field content, can contain information about checkBoxes, or another necessary controls in this step</p>
<% end %>
